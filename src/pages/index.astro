---
import Hitokoto from "@components/Hitokoto.astro";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import Markdown from "@components/misc/Markdown.astro";
import { getEntry } from "astro:content";

const aboutPost = await getEntry("spec", "index");
const { Content } = await aboutPost.render();
---



<MainGridLayout>
    <Hitokoto
            class="onload-animation"
            style="animation-delay: var(--content-delay)"
    />
        <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32 mb-4 card-base">
        <div class=" z-10 px-9 py-6 relative w-full">
            <Markdown class="mt-2 mb-6 markdown-content onload-animation">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>

